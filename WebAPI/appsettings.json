  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information", // Mức độ log mặc định là Information
      "Override": {
        "Microsoft": "Error", // Loại bỏ log từ Microsoft với mức độ thấp hơn Error
        "System": "Error" // Loại bỏ log từ System với mức độ thấp hơn Error
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/info/info-log-.log",
          "rollingInterval": "Day", // Tạo file mới mỗi ngày
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3} {Message:lj}{Exception}{NewLine}",
          "restrictedToMinimumLevel": "Information" // Chỉ ghi các log có mức độ "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/warning/warning-log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3} {Message:lj}{Exception}{NewLine}",
          "restrictedToMinimumLevel": "Warning" // Chỉ ghi các log có mức độ "Warning"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/error/error-log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3} {Message:lj}{Exception}{NewLine}",
          "restrictedToMinimumLevel": "Error" // Chỉ ghi các log có mức độ "Error"
        }
      }
    ]
  }

}
